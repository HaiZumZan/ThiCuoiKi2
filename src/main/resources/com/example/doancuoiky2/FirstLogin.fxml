<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.doancuoiky2.Controller.ControllerLogin">
   <children>
      <TextField layoutX="276.0" layoutY="208.0" />
      <ImageView fitHeight="500.0" fitWidth="700.0" layoutY="-1.0" pickOnBounds="true">
         <image>
            <Image url="@GUI_login.png" />
         </image>
      </ImageView>
      <TextField layoutX="207.0" layoutY="110.0" prefHeight="26.0" prefWidth="217.0" promptText="Tên tài khoản" />
      <PasswordField layoutX="206.0" layoutY="181.0" prefHeight="26.0" prefWidth="218.0" promptText="Mật khẩu" />
      <RadioButton fx:id="guestBtn" layoutX="206.0" layoutY="233.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="115.0" text="Khách hàng">
         <font>
            <Font size="15.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="role" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="driverBtn" layoutX="350.0" layoutY="233.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="94.0" text="Tài xế" toggleGroup="$role">
         <font>
            <Font size="17.0" />
         </font>
      </RadioButton>
      <Button fx:id="loginBtn" layoutX="263.0" layoutY="277.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="115.0" stylesheets="@style.css" text="SIGN IN">
